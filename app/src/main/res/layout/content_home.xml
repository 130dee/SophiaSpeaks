<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smalltag"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dee_conway_2016.fyp.dit.ie.sophiaspeaks.HomeActivity"
    tools:showIn="@layout/activity_home">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_editbox"
        android:id="@+id/playGame"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/playgamebtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/fbBlue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/play_game"
        android:id="@+id/textView"
        android:layout_below="@+id/playGame"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/take_photo"
        android:id="@+id/textView3"
        android:layout_above="@+id/playGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nicecamera"
        android:padding="@dimen/activity_editbox"
        android:id="@+id/cameraButton"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@color/fbBlue"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/albumButton"
        android:padding="@dimen/activity_editbox"
        android:hapticFeedbackEnabled="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/photoalbum"
        android:background="@color/fbBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/show_album"
        android:id="@+id/textView4"
        android:layout_below="@+id/albumButton"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        />
</RelativeLayout>
