<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smalltag"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dee_conway_2016.fyp.dit.ie.sophiaspeaks.LoginActivity"
    tools:showIn="@layout/activity_login">




    <EditText
        android:background="@color/white"
        android:padding="@dimen/activity_editbox"
        android:hapticFeedbackEnabled="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_logscreen"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editUserName"
        android:hint="@string/hint_user"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <EditText
        android:background="@color/white"
        android:padding="@dimen/activity_editbox"
        android:layout_marginTop="@dimen/activity_logscreen"
        android:inputType="textPassword"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/loginPassword"
        android:layout_below="@+id/editUserName"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_password" />
    <!--Textbox pre enetered for testing-->




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hapticFeedbackEnabled="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/user_error_warning"
        android:id="@+id/loginError"
        android:layout_below="@+id/loginPassword"
        android:layout_centerHorizontal="true"
        android:background="#fcfafa"
        android:textColor="#fb2828"
        android:typeface="sans"
        android:visibility="gone" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supportWorker"
        android:padding="@dimen/activity_editbox"
        android:background="@color/white"
        android:hint="@string/hint_code"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:padding="@dimen/activity_editbox"
        android:textColor="@color/textWhite"
        android:background="@color/fbBlue"
        android:id="@+id/submitLogin"
        android:hapticFeedbackEnabled="true"
        android:layout_marginTop="88dp"
        android:ellipsize="middle"
        android:layout_below="@+id/supportWorker"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:padding="@dimen/activity_editbox"
        android:textColor="@color/textWhite"
        android:background="@color/fbBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_register"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
