<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/smalltag"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dee_conway_2016.fyp.dit.ie.sophiaspeaks.ParentView"
    tools:showIn="@layout/activity_parent_view">




    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/currentImage"/>

        <ImageButton
            android:padding="@dimen/activity_edit_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mapiconnew"
            android:id="@+id/whereWasITaken"
            android:background="@android:color/transparent"
            android:hapticFeedbackEnabled="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:padding="@dimen/activity_edit_padding"
            android:layout_height="wrap_content"
            android:src="@drawable/closeicon"
            android:hapticFeedbackEnabled="true"
            android:id="@+id/close"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:id="@+id/linearLayout4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_image"
                android:id="@+id/editImage"
                android:layout_weight="0.50" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_image"
                android:id="@+id/nextImage"
                android:layout_weight="0.50" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/themebtns"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="82dp">


            <ImageButton
                android:contentDescription="@string/right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/correctTheme"
                android:src="@drawable/correctround"
                android:background="@android:color/transparent" />

            <ImageButton
                android:contentDescription="@string/wrong_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wrongTheme"
                android:src="@drawable/wrondround"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
