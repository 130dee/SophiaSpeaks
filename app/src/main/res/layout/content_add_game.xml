<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sophia_btmr"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dee_conway_2016.fyp.dit.ie.sophiaspeaks.AddGame"
    tools:showIn="@layout/activity_add_game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_theme"
        android:id="@+id/nameGame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameGame"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_edit_padding"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_editbox"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/new_game"
            android:background="@color/purple"
            android:id="@+id/txtView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:padding="@dimen/activity_editbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addGameEditText"
            android:background="@color/white"
            android:layout_toRightOf="@+id/txtView1"
            android:layout_toEndOf="@+id/txtView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_editbox"
            android:padding="@dimen/activity_editbox"
            android:background="@color/fbBlue"
            android:textColor="@color/textWhite"
            android:text="@string/add_new_theme"
            android:hapticFeedbackEnabled="true"
            android:id="@+id/addNewGameButton"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtView1" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:hapticFeedbackEnabled="true">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_theme"
                android:padding="@dimen/activity_editbox"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/purple"
                android:id="@+id/themeList"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listOfThemes"
                android:scrollbars="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/themeList" />

    </RelativeLayout>

</RelativeLayout>



