<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sophia_btmr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dee_conway_2016.fyp.dit.ie.sophiaspeaks.DisplayPhoto"
    tools:showIn="@layout/activity_display_photo">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:hapticFeedbackEnabled="true"
        android:background="?android:selectableItemBackground"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whatButton"
        android:src="@drawable/whatisthis"
        android:background="?android:selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happyButton"
        android:hapticFeedbackEnabled="true"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/happydace"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sadButton"
        android:hapticFeedbackEnabled="true"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/sadface"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/killButton"
        android:hapticFeedbackEnabled="true"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/x"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/textView2"
        android:layout_above="@+id/happyButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
